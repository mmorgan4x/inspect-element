{
  "manifest_version": 3,
  "name": "Element Picker",
  "version": "1.0",
  "description": "Adds a right-click option to activate element picker mode",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["picker.js"],
      "css": ["picker.css"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
